pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git credentialsId: 'your-credentials-id', url: 'https://github.com/your-username/alx-backend-python.git', branch: 'main'
            }
        }

        stage('Set Up Python Environment') {
            steps {
                withPythonEnv('python3') {
                    sh 'python3 -m venv venv'
                    sh '. venv/bin/activate && pip install --upgrade pip'
                    sh '. venv/bin/activate && pip install -r messaging_app/requirements.txt'
                }
            }
        }

        stage('Run Tests with Pytest') {
            steps {
                sh '. venv/bin/activate && pytest messaging_app/tests/ --junitxml=report.xml'
            }
            post {
                always {
                    junit 'report.xml'
                }
            }
        }
    }

    triggers {
        none // For manual trigger
    }
}
